{
    "$schema": "http://json.schemastore.org/template",
    "author": "Niroj",
    "classifications": [
        "library"
    ],
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "identity": "DevNiroj.CleanArchitecture.Template.Library",
    "name": ".Net 6 clean architecture class library template",
    "shortName": "nirojlib",
  "sourceName": "NirojTemplate.Library",
  "symbols": {
    "clientApp": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "choices": [
        {
          "choice": "none",
          "description": "Create a .net6 api project"
        },
        {
          "choice": "api",
          "description": "Create a .net6 api project"
        },
        {
          "choice": "console",
          "description": "Create a .net6 console app project"
        }
      ],
      "description": "The type of client project"
    },
    "excludeTests": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**/*",
        "templates/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "*.nuspec"
      ],
      "modifiers": [
        {
          "condition": "(clientApp==\"none\")",
          "exclude": [
            "src/Web"
          ]
        },
        {
          "condition": "(clientApp==\"api\")",
          "exclude": [
            "src/Web/ConsoleApp"
          ]
        },
        {
          "condition": "(clientApp==\"console\")",
          "exclude": [
            "src/Web/Api"
          ]
        },
        {
          "condition": "(excludeTests)",
          "exclude": [
            "tests/**/*"
          ]
        }
      ]
    }
   
  ]
}